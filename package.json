{
  "name": "quiz",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev:tailwind": "bunx tailwindcss -i ./src/tailwind.css -o ./build/index.css --watch",
    "dev:ts": "bun build --watch --outfile=./build/index.js ./src/index.ts",
    "dev": "concurrently \"bun dev:tailwind\" \"bun dev:ts\""
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.3",
    "@types/bun": "latest",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "tailwindcss": "^4.0.3"
  }
}